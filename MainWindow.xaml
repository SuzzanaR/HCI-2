<Window x:Class="Asocijacije.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Asocijacije"
        mc:Ignorable="d" Background="#F2F2F2"
        Title="Asocijacije" Height="700" Width="1000" WindowStartupLocation="CenterScreen">


    <Window.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="Styles.xaml"/>
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </Window.Resources>


    <Grid VerticalAlignment="Center">
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
            <ColumnDefinition/>
            
        </Grid.ColumnDefinitions>

        <Grid.RowDefinitions>
            <RowDefinition Height="40"/>
            <RowDefinition Height="40"/>
            <RowDefinition Height="40"/>
            <RowDefinition Height="40"/>
            <RowDefinition Height="40"/>
            <RowDefinition Height="40"/>
            <RowDefinition Height="40"/>
            <RowDefinition Height="40"/>
            <RowDefinition Height="40"/>
            <RowDefinition Height="40"/>
            <RowDefinition Height="40"/>
            <RowDefinition Height="40"/>
            <RowDefinition Height="40"/>
        </Grid.RowDefinitions>


        <TextBlock Name="timerTextBlock" Grid.Row="0" Grid.Column="0" Grid.ColumnSpan="2" Width="50" FontSize="20">150</TextBlock>
        <TextBlock Grid.Row="0" Grid.Column="1" Name="scoreTextBlock" Text="Bodovi: 0" FontSize="16" VerticalAlignment="Bottom" HorizontalAlignment="Center" Margin="0,0,0,20"/>


        <Button Grid.Row="1" Grid.Column="0" HorizontalAlignment="Right" Margin="160,0" Style="{StaticResource ButtonTerm}" Name="buttonA1P" Template="{StaticResource NoMouseOverButtonTemplate}">OSOBA</Button>
        <Button Grid.Row="2" Grid.Column="0" HorizontalAlignment="Right" Margin="120,0"  Style="{StaticResource ButtonTerm}" Name="buttonA2P" Template="{StaticResource NoMouseOverButtonTemplate}">ISTRAŽIVAČ</Button>
        <Button Grid.Row="3" Grid.Column="0" HorizontalAlignment="Right" Margin="80,0" Style="{StaticResource ButtonTerm}" Name="buttonA3P" Template="{StaticResource NoMouseOverButtonTemplate}" Content="INSTITUT" />
        <Button Grid.Row="4" Grid.Column="0" HorizontalAlignment="Right" Margin="40,0" Style="{StaticResource ButtonTerm}" Name="buttonA4P" Template="{StaticResource NoMouseOverButtonTemplate}" Content="PRIMIJENJENI" />
        <Button Grid.Row="5" Grid.Column="0" HorizontalAlignment="Right" Margin="10,0" Style="{StaticResource ButtonTerm}" Name="buttonAP" Template="{StaticResource NoMouseOverButtonTemplate}" Content="NAUČNIK" />

        <Button Grid.Row="6" Grid.Column="0" Grid.ColumnSpan="2" Height="30" Width="200" Foreground="White" FontSize="16" BorderBrush="#4D8FAC" Background="#4D8FAC" Template="{StaticResource NoMouseOverButtonTemplate}" VerticalContentAlignment="Center" Name="Konacno" FontWeight="Bold" BorderThickness="0" Content="NIKOLA TESLA"/>

        <Button Grid.Row="1" Grid.Column="1" HorizontalAlignment="left" Margin="160,0" Style="{StaticResource ButtonTerm}" Name="buttonB1P" Template="{StaticResource NoMouseOverButtonTemplate}" Content="AVION"/>
        <Button Grid.Row="2" Grid.Column="1" HorizontalAlignment="left" Margin="120,0" Style="{StaticResource ButtonTerm}" Name="buttonB2P" Template="{StaticResource NoMouseOverButtonTemplate}" Content="PISTA"/>
        <Button Grid.Row="3" Grid.Column="1" HorizontalAlignment="left" Margin="80,0" Style="{StaticResource ButtonTerm}" Name="buttonB3P" Template="{StaticResource NoMouseOverButtonTemplate}" Content="KONTROLNI TORANJ"/>
        <Button Grid.Row="4" Grid.Column="1" HorizontalAlignment="left" Margin="40,0" Style="{StaticResource ButtonTerm}" Name="buttonB4P" Template="{StaticResource NoMouseOverButtonTemplate}" Content="VOJNI"/>
        <Button Grid.Row="5" Grid.Column="1" HorizontalAlignment="left" Margin="0,0" Style="{StaticResource ButtonTerm}" Name="buttonBP" Template="{StaticResource NoMouseOverButtonTemplate}" Content="AERODROM"/>

        <Button Grid.Row="7" Grid.Column="0" HorizontalAlignment="Right" Margin="10,0" Style="{StaticResource ButtonTerm}" Name="buttonCP" Template="{StaticResource NoMouseOverButtonTemplate}" Content="MAGNET"/>
        <Button Grid.Row="8" Grid.Column="0" HorizontalAlignment="Right" Margin="40,0"  Style="{StaticResource ButtonTerm}" Name="buttonC4P" Template="{StaticResource NoMouseOverButtonTemplate}" Content="SJEVER-JUG"/>
        <Button Grid.Row="9" Grid.Column="0" HorizontalAlignment="Right" Margin="80,0" Style="{StaticResource ButtonTerm}" Name="buttonC3P" Template="{StaticResource NoMouseOverButtonTemplate}" Content="METAL"/>
        <Button Grid.Row="10" Grid.Column="0" HorizontalAlignment="Right" Margin="120,0" Style="{StaticResource ButtonTerm}" Name="buttonC2P" Template="{StaticResource NoMouseOverButtonTemplate}" Content="POLOVI"/>
        <Button Grid.Row="11" Grid.Column="0" HorizontalAlignment="Right" Margin="160,0" Style="{StaticResource ButtonTerm}" Name="buttonC1P" Template="{StaticResource NoMouseOverButtonTemplate}" Content="PRIVLAČENJE"/>

        <Button Grid.Row="7" Grid.Column="1" HorizontalAlignment="left" Margin="0,0"  VerticalContentAlignment="Center" Name="buttonDP" Style="{StaticResource ButtonTerm}" Template="{StaticResource NoMouseOverButtonTemplate}" Content="POLJE"/>
        <Button Grid.Row="8" Grid.Column="1" HorizontalAlignment="left" Margin="40,0"  VerticalContentAlignment="Center" Name="buttonD4P" Style="{StaticResource ButtonTerm}" Template="{StaticResource NoMouseOverButtonTemplate}" Content="BIJELO"/>
        <Button Grid.Row="9" Grid.Column="1" HorizontalAlignment="left" Margin="80,0" VerticalContentAlignment="Center" Name="buttonD3P" Style="{StaticResource ButtonTerm}" Template="{StaticResource NoMouseOverButtonTemplate}" Content="ELEKTRIČNO"/>
        <Button Grid.Row="10" Grid.Column="1" HorizontalAlignment="left" Margin="120,0" VerticalContentAlignment="Center" Name="buttonD2P" Style="{StaticResource ButtonTerm}" Template="{StaticResource NoMouseOverButtonTemplate}" Content="ŠAH"/>
        <Button Grid.Row="11" Grid.Column="1" HorizontalAlignment="left" Margin="160,0" VerticalContentAlignment="Center" Name="buttonD1P" Style="{StaticResource ButtonTerm}" Template="{StaticResource NoMouseOverButtonTemplate}" Content="KOSOVO"/>






        <Button Grid.Row="1" Grid.Column="0" Style="{StaticResource ButtonLetters}" Template="{StaticResource NoMouseOverButtonTemplate}" Margin="160,0" HorizontalAlignment="Right" Click="Button_Click" Name="buttona1" >A1</Button>
        <Button Grid.Row="2" Grid.Column="0" Style="{StaticResource ButtonLetters}" Template="{StaticResource NoMouseOverButtonTemplate}" Margin="120,0" HorizontalAlignment="Right" Name="buttona2" Click="buttona2_Click">A2</Button>
        <Button Grid.Row="3" Grid.Column="0" Style="{StaticResource ButtonLetters}" Template="{StaticResource NoMouseOverButtonTemplate}" Margin="80,0"  HorizontalAlignment="Right" Content="A3" Name="buttona3" Click="buttona3_Click"/>
        <Button Grid.Row="4" Grid.Column="0" Style="{StaticResource ButtonLetters}" Template="{StaticResource NoMouseOverButtonTemplate}" Margin="40,0"  HorizontalAlignment="Right" Content="A4" Name="buttona4" Click="buttona4_Click"/>
        <TextBox Grid.Row="5" Grid.Column="0" Style="{StaticResource TextInput}" HorizontalAlignment="Right" Margin="10,0" Name="myTextBoxA" KeyDown="TextBox_KeyDownA"  GotFocus="TextBox_GotFocusa" LostFocus="TextBox_LostFocusa">A</TextBox>

        <TextBox Grid.Row="6" Grid.Column="0" Grid.ColumnSpan="2" Height="30" Width="200" FontSize="16" Background="DarkGray" Foreground="White" VerticalContentAlignment="Center" HorizontalContentAlignment="Center" Name="myTextBoxK" KeyDown="TextBox_KeyDownK"  GotFocus="TextBox_GotFocusK" LostFocus="TextBox_LostFocusK">???</TextBox>

        <Button Grid.Row="1" Grid.Column="1" Style="{StaticResource ButtonLetters}" Template="{StaticResource NoMouseOverButtonTemplate}" HorizontalAlignment="left" Margin="160,0" Content="B1" Name="buttonb1" Click="buttonb1_Click"/>
        <Button Grid.Row="2" Grid.Column="1" Style="{StaticResource ButtonLetters}" Template="{StaticResource NoMouseOverButtonTemplate}" HorizontalAlignment="left" Margin="120,0" Content="B2" Name="buttonb2" Click="buttonb2_Click"/>
        <Button Grid.Row="3" Grid.Column="1" Style="{StaticResource ButtonLetters}" Template="{StaticResource NoMouseOverButtonTemplate}" HorizontalAlignment="left" Margin="80,0" Content="B3" Name="buttonb3" Click="buttonb3_Click"/>
        <Button Grid.Row="4" Grid.Column="1" Style="{StaticResource ButtonLetters}" Template="{StaticResource NoMouseOverButtonTemplate}" HorizontalAlignment="left" Margin="40,0"  Content="B4" Name="buttonb4" Click="buttonb4_Click"/>
        <TextBox Grid.Row="5" Grid.Column="1" Style="{StaticResource TextInput}" HorizontalAlignment="left" Margin="0,0" Name="myTextBoxB" KeyDown="TextBox_KeyDown" GotFocus="TextBox_GotFocus" LostFocus="TextBox_LostFocus">B</TextBox>


        <TextBox Grid.Row="7" Grid.Column="0" Style="{StaticResource TextInput}" HorizontalAlignment="Right" Margin="10,0" Name="myTextBoxC" KeyDown="TextBox_KeyDownC"  GotFocus="TextBox_GotFocusC" LostFocus="TextBox_LostFocusC">C</TextBox>
        <Button Grid.Row="8" Grid.Column="0" Style="{StaticResource ButtonLetters}" Template="{StaticResource NoMouseOverButtonTemplate}" HorizontalAlignment="Right" Margin="40,0" Content="C4" Name="buttonc4" Click="buttonc4_Click"/>
        <Button Grid.Row="9" Grid.Column="0" Style="{StaticResource ButtonLetters}" Template="{StaticResource NoMouseOverButtonTemplate}" HorizontalAlignment="Right" Margin="80,0" Content="C3" Name="buttonc3" Click="buttonc3_Click"/>
        <Button Grid.Row="10" Grid.Column="0" Style="{StaticResource ButtonLetters}" Template="{StaticResource NoMouseOverButtonTemplate}" HorizontalAlignment="Right" Margin="120,0" Content="C2" Name="buttonc2" Click="buttonc2_Click"/>
        <Button Grid.Row="11" Grid.Column="0" Style="{StaticResource ButtonLetters}" Template="{StaticResource NoMouseOverButtonTemplate}" HorizontalAlignment="Right" Margin="160,0" Content="C1" Name="buttonc1" Click="buttonc1_Click"/>

        <TextBox Grid.Row="7" Grid.Column="1" Style="{StaticResource TextInput}" HorizontalAlignment="left" Margin="0,0" Name="myTextBoxD" KeyDown="TextBox_KeyDownD"  GotFocus="TextBox_GotFocusD" LostFocus="TextBox_LostFocusD">D</TextBox>
        <Button Grid.Row="8" Grid.Column="1" Style="{StaticResource ButtonLetters}" Template="{StaticResource NoMouseOverButtonTemplate}" HorizontalAlignment="left" Margin="40,0" Content="D4" Name="buttond4" Click="buttond4_Click"/>
        <Button Grid.Row="9" Grid.Column="1" Style="{StaticResource ButtonLetters}" Template="{StaticResource NoMouseOverButtonTemplate}" HorizontalAlignment="left" Margin="80,0" Content="D3" Name="buttond3" Click="buttond3_Click" />
        <Button Grid.Row="10" Grid.Column="1" Style="{StaticResource ButtonLetters}" Template="{StaticResource NoMouseOverButtonTemplate}" HorizontalAlignment="left" Margin="120,0" Content="D2" Name="buttond2" Click="buttond2_Click"/>
        <Button Grid.Row="11" Grid.Column="1" Style="{StaticResource ButtonLetters}" Template="{StaticResource NoMouseOverButtonTemplate}" HorizontalAlignment="left" Margin="160,0" Content="D1" Name="buttond1" Click="buttond1_Click"/>






        <Popup Name="DeleteConfirmationPopup" Width="300" Height="150" Placement="center" StaysOpen="False" IsOpen="False" HorizontalOffset="0" >
            <Border Background="WHITE" BorderBrush="Gray" BorderThickness="1" CornerRadius="10" >
                    <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center" Margin="10">
                        <TextBlock Text="Da li ste sigurni da" HorizontalAlignment="Center" FontSize="14" Margin="10" Foreground="black"/>
                        <TextBlock Text="želite da odustanete?" HorizontalAlignment="Center" FontSize="14" Margin="0" Foreground="black"/>
                        <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,10">
                            <Button Content="Da" Cursor="Hand" Width="80" Template="{StaticResource NoMouseOverButtonTemplate}" Height="30" Margin="10" Click="ConfirmDeleteButton_Click" Background="Transparent" />
                            <Button Content="Ne" Cursor="Hand" Width="80" Template="{StaticResource NoMouseOverButtonTemplate}" Height="30" Margin="10" Click="CancelDeleteButton_Click"  Background="LightGray" />
                        </StackPanel>
                    </StackPanel>
                </Border>
        </Popup>





        <Button Grid.Row="12" Grid.Column="0" Grid.ColumnSpan="2" Style="{StaticResource ButtonOdustani}" Click="Button_Odustani" Template="{StaticResource NoMouseOverButtonTemplate}" Name="ButtonOdustani">ODUSTANI</Button>
    </Grid>
</Window>
